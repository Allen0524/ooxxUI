{
	"root": true,
	"env": {
		"browser": true
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		},
		"project": "./tsconfig.json"
	},
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"react",
		"react-hooks",
		"@typescript-eslint",
		"testing-library",
		"jsx-a11y"
	],
	"extends": [
		"eslint:recommended",
		"eslint-config-prettier",
		"plugin:jsx-a11y/recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	]
}
