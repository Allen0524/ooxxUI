		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/jest": "^29.2.3",
		"@types/react": "^18.0.25",
		"@types/react-dom": "^18.0.9",
		"@typescript-eslint/eslint-plugin": "^5.44.0",
		"@typescript-eslint/parser": "^5.44.0",
		"babel-loader": "^8.3.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
